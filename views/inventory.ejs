<div class="panel-container">
  <div class="panel">
    <h2>Gestionar productos</h2>
    <a href="/inventory/products" class="btn">Ir a productos</a>
  </div>
  <div class="panel">
    <h2>Gestionar proveedores</h2>
    <a href="/inventory/suppliers" class="btn">Ir a proveedores</a>
  </div>
  <div class="panel">
    <h2>Gestionar categorías</h2>
    <a href="/inventory/categories" class="btn">Ir a categorías</a>
  </div>
  <div class="panel">
    <h2>Gestionar localizaciones</h2>
    <a href="/inventory/locations" class="btn">Ir a localizaciones</a>
  </div>
  <div class="panel">
    <h2>Productos bajo stock</h2>
    <a href="/inventory/low-stock" class="btn">Ver productos en bajo stock</a>
  </div>
  <% if (user && user.id_rol === 2) { %>
    <div class="panel">
      <h2>Gestionar usuarios (Admin)</h2>
      <a href="/inventory/users" class="btn">Ir a usuarios</a>
    </div>
  <% } %>
  <div class="panel">
    <h2>Cerrar sesión</h2>
    <a href="/inventory/logout" class="btn">Cerrar sesión</a>
  </div>
</div>

